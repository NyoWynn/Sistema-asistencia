@{
    ViewData["Title"] = "Registro de Asistencia";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido, @Context.Session.GetString("UserName")</h1>
    <p>Utilice los botones para registrar su jornada laboral.</p>
</div>

<!-- Reloj elegante -->
<div class="clock-container text-center mb-5">
    <div class="clock-wrapper">
        <div class="clock-face">
            <div class="clock-time" id="currentTime"></div>
            <div class="clock-date" id="currentDate"></div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center gap-4 mt-4">
    <!-- Botón de Entrada -->
    <form asp-action="MarkAttendance" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <button type="submit" name="recordType" value="Entrada" 
                class="btn btn-success btn-lg px-5 py-3 attendance-btn @(ViewBag.AttendanceStatus == "CanClockIn" ? "" : "disabled")"
                @(ViewBag.AttendanceStatus == "CanClockIn" ? "" : "disabled")>
            <i class="fas fa-sign-in-alt me-2"></i>
            Marcar Entrada
        </button>
    </form>

    <!-- Botón de Salida -->
    <form asp-action="MarkAttendance" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <button type="submit" name="recordType" value="Salida" 
                class="btn btn-danger btn-lg px-5 py-3 attendance-btn @(ViewBag.AttendanceStatus == "CanClockOut" ? "" : "disabled")"
                @(ViewBag.AttendanceStatus == "CanClockOut" ? "" : "disabled")>
            <i class="fas fa-sign-out-alt me-2"></i>
            Marcar Salida
        </button>
    </form>
</div>

@if (ViewBag.AttendanceStatus == "CompletedDay")
{
    <div class="alert alert-success text-center mt-4">
        <h4><i class="fas fa-check-circle me-2"></i>Jornada laboral finalizada por hoy.</h4>
    </div>
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-info mt-4">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-4">@TempData["Error"]</div>
}